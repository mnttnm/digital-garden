---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const notes = await getCollection('notes', ({ data }) => !data.draft);
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();

// Get all notes for related and prev/next
const allNotes = await getCollection('notes', ({ data }) => !data.draft);
const currentTags = note.data.tags || [];

// Related notes based on shared tags
const relatedNotes = allNotes
  .filter(n => n.slug !== note.slug)
  .map(n => ({
    note: n,
    shared: (n.data.tags || []).filter(t => currentTags.includes(t)).length
  }))
  .filter(item => item.shared > 0)
  .sort((a, b) => b.shared - a.shared)
  .slice(0, 3)
  .map(item => item.note);

// Prev/next notes chronologically
const sortedNotes = allNotes.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const idx = sortedNotes.findIndex(n => n.slug === note.slug);
const prevNote = idx > 0 ? sortedNotes[idx - 1] : null;
const nextNote = idx < sortedNotes.length - 1 ? sortedNotes[idx + 1] : null;

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getTypeLabel(type: string) {
  const labels: Record<string, string> = {
    'essay': 'Essay',
    'link': 'Link',
    'snippet': 'Snippet',
    'thought': 'Thought'
  };
  return labels[type] || type;
}

const base = import.meta.env.BASE_URL;
---

<Base title={note.data.title}>
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <a href={base}>learning.log</a>
    <span class="sep">/</span>
    <span class="current">{note.data.title}</span>
  </nav>

  <article>
    <header class="article-header">
      <div class="article-meta">
        <span class="note-type">{getTypeLabel(note.data.type)}</span>
        <time datetime={note.data.date.toISOString()}>{formatDate(note.data.date)}</time>
      </div>
      <h1 class="article-title">{note.data.title}</h1>
      {note.data.takeaway && (
        <p class="article-takeaway">{note.data.takeaway}</p>
      )}
      {note.data.link && (
        <p class="article-link">
          <a href={note.data.link} target="_blank" rel="noopener">View original →</a>
        </p>
      )}
    </header>

    <div class="article-content">
      <Content />
    </div>

    {note.data.tags && note.data.tags.length > 0 && (
      <footer class="article-footer">
        <div class="tags">
          {note.data.tags.map(tag => (
            <a href={`${base}?tag=${encodeURIComponent(tag)}`} class="tag">{tag}</a>
          ))}
        </div>
      </footer>
    )}
  </article>

  {relatedNotes.length > 0 && (
    <section class="related" aria-label="Related notes">
      <span class="related-label">Related</span>
      <ul class="related-list">
        {relatedNotes.map(r => (
          <li>
            <a href={`${base}notes/${r.slug}/`}>
              <span class="related-type">{getTypeLabel(r.data.type)}</span>
              {r.data.title}
            </a>
          </li>
        ))}
      </ul>
    </section>
  )}

  {(prevNote || nextNote) && (
    <nav class="post-nav" aria-label="Post navigation">
      <div class="nav-prev">
        {prevNote && (
          <a href={`${base}notes/${prevNote.slug}/`}>
            <span class="nav-dir">← Newer</span>
            <span class="nav-title">{prevNote.data.title}</span>
          </a>
        )}
      </div>
      <div class="nav-next">
        {nextNote && (
          <a href={`${base}notes/${nextNote.slug}/`}>
            <span class="nav-dir">Older →</span>
            <span class="nav-title">{nextNote.data.title}</span>
          </a>
        )}
      </div>
    </nav>
  )}

  <nav class="back-link">
    <a href={base}>← Back to learning.log</a>
  </nav>
</Base>

<style>
  /* Breadcrumb */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.78rem;
    color: var(--text-tertiary);
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .breadcrumb a:hover {
    color: var(--accent);
  }

  .breadcrumb .sep {
    opacity: 0.4;
  }

  .breadcrumb .current {
    color: var(--text-secondary);
    max-width: 30ch;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .article-header {
    margin-bottom: 2rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .note-type {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    font-weight: 500;
  }

  .article-meta time {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .article-title {
    margin-top: 0;
    margin-bottom: 0.75rem;
  }

  .article-takeaway {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: 0.75rem;
  }

  .article-link {
    margin-bottom: 0;
  }

  .article-content {
    margin-bottom: 3rem;
  }

  .article-footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    background: var(--color-code-bg);
    padding: 0.1rem 0.5rem;
    border-radius: 3px;
    text-decoration: none;
    transition: background-color 0.15s ease, color 0.15s ease;
  }

  .tag:hover {
    background: var(--accent);
    color: white;
  }

  /* Related Notes */
  .related {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-bottom: 1.5rem;
  }

  .related-label {
    display: block;
    font-size: 0.69rem;
    font-weight: 500;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    margin-bottom: 0.75rem;
  }

  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .related-list a {
    display: flex;
    align-items: baseline;
    gap: 0.6rem;
    text-decoration: none;
    color: var(--text-secondary);
    transition: color 0.15s ease;
    font-family: var(--font-serif);
    font-size: 0.92rem;
  }

  .related-list a:hover {
    color: var(--accent);
  }

  .related-type {
    font-family: var(--font-sans);
    font-size: 0.62rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
    flex-shrink: 0;
  }

  /* Prev/Next Navigation */
  .post-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-bottom: 1.5rem;
  }

  .nav-prev,
  .nav-next {
    min-width: 0;
  }

  .nav-next {
    text-align: right;
  }

  .post-nav a {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-decoration: none;
    color: var(--text-secondary);
    transition: color 0.15s ease;
  }

  .nav-next a {
    align-items: flex-end;
  }

  .post-nav a:hover {
    color: var(--accent);
  }

  .nav-dir {
    font-size: 0.72rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
  }

  .nav-title {
    font-family: var(--font-serif);
    font-size: 0.9rem;
    line-height: 1.35;
    max-width: 25ch;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  @media (max-width: 640px) {
    .post-nav {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .nav-next {
      text-align: left;
    }

    .nav-next a {
      align-items: flex-start;
    }
  }

  .back-link {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link a {
    font-size: 0.9rem;
  }
</style>
