---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const notes = await getCollection('notes');
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getTypeLabel(type: string) {
  const labels: Record<string, string> = {
    'essay': 'Essay',
    'link': 'Link',
    'snippet': 'Code',
    'thought': 'Note'
  };
  return labels[type] || type;
}

const base = import.meta.env.BASE_URL;
---

<Base title={note.data.title}>
  <article>
    <header class="article-header">
      <div class="article-meta">
        <span class="note-type">{getTypeLabel(note.data.type)}</span>
        <time datetime={note.data.date.toISOString()}>{formatDate(note.data.date)}</time>
      </div>
      <h1 class="article-title">{note.data.title}</h1>
      {note.data.takeaway && (
        <p class="article-takeaway">{note.data.takeaway}</p>
      )}
      {note.data.link && (
        <p class="article-link">
          <a href={note.data.link} target="_blank" rel="noopener">View original →</a>
        </p>
      )}
    </header>

    <div class="article-content">
      <Content />
    </div>

    {note.data.tags && note.data.tags.length > 0 && (
      <footer class="article-footer">
        <div class="tags">
          {note.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </footer>
    )}
  </article>

  <nav class="back-link">
    <a href={`${base}notes/`}>← All notes</a>
  </nav>
</Base>

<style>
  .article-header {
    margin-bottom: 2rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .note-type {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    font-weight: 500;
  }

  .article-meta time {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .article-title {
    margin-top: 0;
    margin-bottom: 0.75rem;
  }

  .article-takeaway {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: 0.75rem;
  }

  .article-link {
    margin-bottom: 0;
  }

  .article-content {
    margin-bottom: 3rem;
  }

  .article-footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    background: var(--color-code-bg);
    padding: 0.1rem 0.5rem;
    border-radius: 3px;
  }

  .back-link {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link a {
    font-size: 0.9rem;
  }
</style>
