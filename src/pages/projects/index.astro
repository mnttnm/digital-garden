---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects', ({ data }) => !data.draft);
const projects = allProjects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
}
---

<Base title="Projects" description="Things I've built with outcomes and learnings.">
  <header class="page-header">
    <h1>Projects</h1>
    <p class="page-description">
      Things I've built — with outcomes, learnings, and the tech behind them.
    </p>
  </header>

  <hr />

  {projects.length === 0 ? (
    <p class="empty-state">No projects yet. Check back soon!</p>
  ) : (
    <ul class="project-list">
      {projects.map(project => (
        <li class="project-item">
          <h2 class="project-title">
            <a href={`/digital-garden/projects/${project.slug}/`}>{project.data.title}</a>
          </h2>
          <p class="project-description">{project.data.description}</p>
          {project.data.outcome && (
            <p class="project-outcome">{project.data.outcome}</p>
          )}
          <div class="project-meta">
            {project.data.github && (
              <a href={project.data.github} target="_blank" rel="noopener">GitHub</a>
            )}
            {project.data.github && project.data.live && <span class="separator">·</span>}
            {project.data.live && (
              <a href={project.data.live} target="_blank" rel="noopener">Live</a>
            )}
          </div>
          {project.data.stack && project.data.stack.length > 0 && (
            <div class="project-stack">
              {project.data.stack.map(tech => (
                <span class="stack-tag">{tech}</span>
              ))}
            </div>
          )}
        </li>
      ))}
    </ul>
  )}
</Base>

<style>
  .page-header {
    margin-bottom: 1.5rem;
  }

  .page-header h1 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .page-description {
    color: var(--color-text-muted);
    margin-bottom: 0;
  }

  .empty-state {
    color: var(--color-text-muted);
    font-style: italic;
  }

  .project-list {
    list-style: none;
    padding: 0;
  }

  .project-item {
    margin-bottom: 2.5rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .project-item:last-child {
    border-bottom: none;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .project-description {
    color: var(--color-text-muted);
    margin: 0 0 0.5rem 0;
  }

  .project-outcome {
    font-size: 0.9rem;
    color: var(--color-accent);
    margin: 0 0 0.75rem 0;
  }

  .project-meta {
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .project-meta a {
    color: var(--color-text-muted);
  }

  .project-meta a:hover {
    color: var(--color-text);
  }

  .separator {
    margin: 0 0.5rem;
    color: var(--color-text-muted);
  }

  .project-stack {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .stack-tag {
    font-size: 0.75rem;
    background: var(--color-code-bg);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    color: var(--color-text-muted);
  }
</style>
