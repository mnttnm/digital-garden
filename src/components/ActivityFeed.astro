  idea: { label: 'Idea', icon: 'ðŸ’­' },
};
---

{displayUpdates.length > 0 && (
  <div class="activity-feed">
    <ol class="timeline">
      {displayUpdates.map((update, index) => (
        <li class="timeline-item">
          <div class="timeline-marker" data-type={update.type}>
            <span class="type-icon">{typeConfig[update.type].icon}</span>
          </div>
          <div class="timeline-content">
            <div class="timeline-header">
              <span class="update-type">{typeConfig[update.type].label}</span>
              <time class="update-date" datetime={new Date(update.date).toISOString()} title={formatDate(update.date)}>
                {getRelativeTime(update.date)}
              </time>
            </div>
            {update.title && <h4 class="update-title">{update.title}</h4>}
            <p class="update-content">{update.content}</p>
          </div>
        </li>
      ))}
    </ol>

    {showViewAll && updates.length > (limit || 0) && (
      <a href="#activity-feed" class="view-all-link">
        View all {updates.length} updates â†’
      </a>
    )}
  </div>
)}

